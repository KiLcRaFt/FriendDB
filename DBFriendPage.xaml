<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendDB.DBFriendPage"
             Title="DBFriendPage">
    <VerticalStackLayout>
        <Label Text="Nimi" />
        <Entry Text="{Binding Name}"/>
        <Label Text="Email" />
        <Entry Text="{Binding Email}"/>
        <Label Text="Telefon"/>
        <Entry Text="{Binding Phone}"/>
        <HorizontalStackLayout>
            <Button Text="Salvesta" Clicked="SaveFriend"/>
            <Button Text="Kustuta" Clicked="DeleteFriend"/>
            <Button Text="Tagasi" Clicked="Cancel"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>